{
  "id": "${artifactId}-${version}",
  "name": "Audit Filter Module",
  "requires": [
    {
      "id": "audit",
      "version": "1.0"
    }
  ],
  "filters": [
    {
      "methods": [
        "*"
      ],
      "pathPattern": "/*",
      "modulePermissions": [
        "audit.item.post"
      ],
      "phase": "pre",
      "type": "request-log"
    },
    {
      "methods": [
        "*"
      ],
      "pathPattern": "/*",
      "modulePermissions": [
        "audit.item.post"
      ],
      "phase": "post",
      "type": "request-log"
    }
  ],
  "provides": [],
  "permissionSets": [],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap"
      }
    ]
  }
}
